//---------------------------------------------------------------------------

#include <vcl.h>
#include <iostream.h>
#pragma hdrstop

//---------------------------------------------------------------------------

#pragma argsused
int main(int argc, char* argv[])
{
        cout << "Razmeri matrici (n, m): ";
        int n, m;
        cin >> n, m;
        int** a = new int* [n];
        for(int i = 0; i < n; i++) a[i] = new int [m];
        cout << "Zapolnite massiv strokami" << endl;
        for(int i = 0; i < n; i++)
                for(int j = 0; j < m; j++) cin >> a[i][j];
        return 0;
}
//---------------------------------------------------------------------------
 